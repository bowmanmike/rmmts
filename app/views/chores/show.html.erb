<h1><%= @chore.name %></h1>

<div id="chore-due">
  <p>
    Original due date: <%= @chore.due_date.strftime("%a, %e %b %Y") %><br>
    Next due date: <%= @chore.next_due_date.strftime("%a, %e %b %Y") %><br>
    <!-- Might need to fix wording for chores that aren't daily weekly or monthly -->
    Needs to be done <%= @chore.frequency_alias %>.
  </p>
</div>

<div id="chore-description">
  <p>
    <%= @chore.description %>
  </p>
</div>

<div id="chore-complete">
  <p>
    Completed?
    <% if @chore.complete %>
      Yes<br>
      <%= form_for [@house, @chore] do |f| %>
        <%= f.hidden_field :complete, :value => false %>
        <%= f.submit "Mark as Incomplete" %>
      <% end %>
    <% else %>
      No<br>
      <%= form_for [@house, @chore] do |f| %>
        <%= f.hidden_field :complete, :value => true %>
        <%= f.submit "Mark as Complete" %>
      <% end %>
    <% end %>
  </p>
</div>

<div id="chore-creator-links">
  <% if @chore.creator == current_user %>
    <%= link_to "Edit chore", edit_house_chore_path(@chore.house, @chore) %> |
    <%= link_to "Delete chore", house_chore_path(@chore.house, @chore), method: :delete, data: { confirm: "Are you sure you want to delete this chore?" } %>
  <% end %>
</div>
