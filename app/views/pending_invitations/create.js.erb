$('#roommates-list').html("<%=j render 'mates/mate_list' %>");
<% if @house.pending_invitations.present? %>
  $('#pending-invitation-list').html("<%=j render @pending_invitations %>");
<% else %>
  $('#pending-invitations-list').hide();
<% end %>

<% flash.each do |type, message| %>
  $('.flash').html("<%= message.html_safe %>")
  $('.flash').addClass('<%= type %>')
<% end %>
