$('#roommates-list').html("<%=j render 'mates/mate_list' %>");
$('#pending-invitations-list').html("<%=j render @pending_invitations %>");

<% flash.each do |type, message| %>
  $('.flash').html("<%= type.to_s.humanize.capitalize %>: <%= message.html_safe %>")
  $('.flash').addClass('<%= type %>')
<% end %>
