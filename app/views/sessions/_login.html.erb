<div id="login-form">
  <%= form_tag sessions_path, method: 'post' do %>

    <div class="field">
      <%= label_tag 'email or username' %>
      <%= text_field_tag :login %>
    </div>

    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <div class="field">
      <%= submit_tag 'Log in' %>
    </div>

  <% end %>
</div>
