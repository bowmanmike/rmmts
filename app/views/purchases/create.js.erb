$('#purchases-buttons').html('<%= j(link_to button_tag("Add new purchase"), new_mate_purchase_path(current_user), remote: true) %>');
$('.purchases-list').html('<%= j(render @purchases) %>');
$('#mate-purchases-list').html('<%= j(render(partial: "purchases/purchase", collection: @mate.purchases, as: :purchase)) %>');
$('#house-calendar').html("<%=j render 'houses/calendar', collection: @events %>")

<% flash.each do |type, message| %>
  $('.flash').html("<%= message.html_safe %>")
  $('.flash').addClass('<%= type %>')
<% end %>
