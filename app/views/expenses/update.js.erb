var previousWeekLink = $('.simple-calendar > a').first().clone();
var nextWeekLink = $('.simple-calendar > a').last().clone();
$('.expenses-list').html('<%= j(render @expenses.order(due_date: :asc)) %>');
$('#expenses-buttons').html('<%= j(link_to button_tag("Add new expense"), new_house_expense_path(@house), remote: true) %>');
$('#expense-form').html('');
$('#mate-expenses-list').html('<%= j(render(partial: "expenses/expense", collection: @house.expenses, as: :expense) || "No current expenses.") %>');

$('#house-calendar').html("<%=j render 'houses/calendar', collection: @events %>")
$('.simple-calendar > a').first().replaceWith(previousWeekLink);
$('.simple-calendar > a').last().replaceWith(nextWeekLink);

<% flash.each do |type, message| %>
  $('.flash').html("<%= message.html_safe %>")
  $('.flash').addClass('<%= type %>')
<% end %>
