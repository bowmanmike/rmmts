$('.expenses-list').html('<%= j(render @expenses) %>');
$('#expenses-buttons').html('<%= j(link_to button_tag("Add new expense"), new_house_expense_path(@house), remote: true) %>');
<% if @expenses.empty? %>
  $('.expenses-list').html('No household expenses yet!');
<% end %>

<% flash.each do |type, message| %>
  $('.flash').html("<%= message.html_safe %>")
  $('.flash').addClass('<%= type %>')
<% end %>
