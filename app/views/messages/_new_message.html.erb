<div id="message-form"><%= form_for [@conversation, @new_message], remote: true do |f| %>
    <div class="field">
      <%= f.label :body, "New Message" %>
      <%= f.text_area :body %>
    </div>

    <div class="action">
      <%= f.submit "Send Message" %>
    </div>
    
    <div class="message-instructions">
      Press <strong><em>Enter</em></strong> to submit, <strong><em>Shift + Enter</em></strong> to begin a new line.<br>
    </div>
  <% end %>
</div>
