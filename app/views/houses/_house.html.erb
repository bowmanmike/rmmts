<div class="show-house">
  <h3><%= link_to house.name, house_path(house) %></h3>
  <%= button_to "Ask to join this house!", request_to_join_house_path(house), class: "request-to-join-house-button" %>
  <div class="house-image">
    <%= image_tag house.house_image %>
  </div>
  <br>
  <p>Number of Roommates: <%= house.mates.count %></p>
  <p>Created by: <%= house.creator.full_name %></p>
</div>
