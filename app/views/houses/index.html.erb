<% if !current_user %>
  <div id="landing-page-content">
    <div id="title-background-shading">
      <div id="landing-page-title">
        <h1>welcome to chortal</h1>
      </div>
    </div>

      <div id="link-background-shading">
        <div id="landing-page-links">
          <h3>live harmoniously with roommates</h3>
          <strong><%= link_to "Login", new_session_path, id: "login-link", remote: true %></strong> |
          <strong><%= link_to "Sign up", new_mate_path, id: "signup-link", remote: true %></strong>
        </div>
        <div id="more-info-button"><%= link_to button_tag("more info"), houses_path %></div>
      </div>

      <div id="info-div">
        <div class="close-info-div">
          <%= link_to "close [x]", id: 'close-info-div' %>
        </div>
        <div class="info-div-column">
          <span class="info-column-header">Create</span>
          <p class="info-column-content">At chortal, we strive to create healthy living spaces.</p>
        </div>
        <div class="info-div-column">
          <span class="info-column-header">Change</span>
          <p class="info-column-content">We're changing the world, one household at a time.</p>
        </div>
        <div class="info-div-column">
          <span class="info-column-header">Grow</span>
          <p class="info-column-content">Learn and grow with your friends and cohabitors.</p>
        </div>
        <div class="info-div-column">
          <span class="info-column-header">Evolve</span>
          <p class="info-column-content">See the evolution in your personal devleopment on a day-to-day basis.</p>
        </div>
      </div>


      <% if current_user %>
        <div id="houses-list">
          <% @houses.each do |house| %>
            <%= link_to house.name, house_path(house) %>
          <% end %>
        </div>
      <% end %>
  </div>
<% end %>

<% if current_user %>
  <% if !current_user.house %>
    <div class="search-for-house">
      <div class="card-container house-search">
        <%= render 'house_search_form' %>
      </div>

      <div class="card-container houses-list"></div>
    </div>
  <% end %>
<% end %>
