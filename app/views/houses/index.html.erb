<% if !current_user %>
  <div id="landing-page-content">
    <div id="title-background-shading">
      <div id="landing-page-title">
        <h1>welcome to chortal</h1>
      </div>
    </div>

      <div id="link-background-shading">
        <div id="landing-page-links">
          <h3>live harmoniously with roommates</h3>
          <strong><%= link_to "Login", new_session_path, id: "login-link", remote: true %></strong> |
          <strong><%= link_to "Sign up", new_mate_path, id: "signup-link", remote: true %></strong>
        </div>
        <div id="more-info-button"><%= link_to button_tag("more info"), houses_path %></div>
      </div>

      <div id="info-div">
        <p>Abundant explanatory information forthcoming.</p>
        <%= link_to "close [x]", id: 'close-info-div' %>
      </div>


      <% if current_user %>
        <div id="houses-list">
          <% @houses.each do |house| %>
            <%= link_to house.name, house_path(house) %>
          <% end %>
        </div>
      <% end %>
  </div>
<% end %>

<% if current_user %>
  <% if !current_user.house %>
    <% @houses.each do |house| %>
      <p><%= link_to house.name, house_path(house) %>, created by <%= house.creator.username %> on <%= house.created_at %></p>
    <% end %>
  <% end %>
<% end %>
