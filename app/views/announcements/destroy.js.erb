$('.announcement-counter').html('<%=j button_tag "Show #{pluralize(@announcements.count, "annnouncement")}", id: "show-announcements-button", class: "announcements-button" %> <%=j button_tag "Hide #{pluralize(@announcements.count, "annnouncement")}", id: "hide-announcements-button", class: "hidden-button announcements-button" %>');
$('#announcements-list').html('<%= j(render @announcements) %>');
<% if @announcements.empty? %>
  $('#announcements-list').html('No announcements!');
<% end %>

<% flash.each do |type, message| %>
  $('.flash').html("<%= message.html_safe %>")
  $('.flash').addClass('<%= type %>')
<% end %>
