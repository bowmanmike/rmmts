$('#announcements-list').html('<%= j(render @announcements.order(created_at: :DESC)) %>');
<% if @announcements.empty? %>
  $('#announcements-list').html('No announcements!');
<% end %>
$('.announcement-counter').html('<strong><%= @announcements.count %></strong> announcements <%= button_tag "Show", id: "show-announcements-button" %> <%= button_tag "Hide", id: "hide-announcements-button", class: "hidden-button" %>');

<% flash.each do |type, message| %>
  $('.flash').html("<%= message.html_safe %>")
  $('.flash').addClass('<%= type %>')
<% end %>
